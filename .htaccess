# Force UTF-8 encoding for all files
AddDefaultCharset UTF-8

# Set Content-Type with UTF-8 for HTML files
<FilesMatch "\.(html|htm)$">
    ForceType "text/html; charset=utf-8"
</FilesMatch>

# Cache Control Headers - Prevent aggressive caching
<IfModule mod_headers.c>
    # HTML files - revalidate before use
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # CSS and JS files - cache but revalidate
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, must-revalidate, max-age=3600"
    </FilesMatch>
    
    # Images - cache for longer
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
</IfModule>

# Enable URL Rewriting
RewriteEngine On

# ===== Blog URL Routing =====
# Blog admin panel
RewriteRule ^blog/admin$ blog/admin.php [L]

# Blog login page
RewriteRule ^blog/login$ blog/login.php [L]

# Blog API endpoint
RewriteRule ^blog/api$ blog/blog-api.php [QSA,L]

# Blog listing page
RewriteRule ^blog/?$ blog.php [L]

# Blog category page
RewriteRule ^blog/category/([^/]+)$ blog.php?category=$1 [QSA,L]

# Blog search
RewriteRule ^blog/search$ blog.php?search= [QSA,L]

# Blog single post (must be after admin/login/api rules)
RewriteRule ^blog/([a-zA-Z0-9\-]+)$ blog/index.php?slug=$1 [QSA,L]

# ===== End Blog URL Routing =====

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html URLs to clean URLs
RewriteCond %{THE_REQUEST} ^GET\ /([^\ ]+)\.html
RewriteRule (.*)\.html$ /$1 [R=301,L]

# Redirect .php URLs to clean URLs (public-facing pages only)
RewriteCond %{THE_REQUEST} ^GET\ /blog\.php[\ ?]
RewriteRule ^blog\.php$ /blog [R=301,L]

RewriteCond %{THE_REQUEST} ^GET\ /blog/admin\.php[\ ?]
RewriteRule ^blog/admin\.php$ /blog/admin [R=301,L]

RewriteCond %{THE_REQUEST} ^GET\ /blog/login\.php[\ ?]
RewriteRule ^blog/login\.php$ /blog/login [R=301,L]

# Remove trailing slash if not a directory
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]

# Default page - redirect to index without extension
DirectoryIndex index.html
